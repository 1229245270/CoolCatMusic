        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupOnly="true"
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true">
        <activity
            android:launchMode="singleTask"
            android:name="com.hzc.coolcatmusic.ui.main.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:exported="true" android:name="com.hzc.coolcatmusic.ui.login.LoginActivity"/>
        <activity android:exported="true" android:name="com.hzc.coolcatmusic.ui.detail.DetailActivity"/>
        <activity android:exported="true" android:name=".ui.generallibrary.MultiLevelActivity"/>
        <activity android:name=".ui.generallibrary.PhotoActivity"/>
        <activity
            android:exported="true"
            android:name=".ui.chatgpt.ChatGPTActivity"/>
